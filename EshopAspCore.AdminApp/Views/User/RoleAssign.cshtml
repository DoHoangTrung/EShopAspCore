@model EshopAspCore.ViewModels.System.Roles.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid px-4">
    <h1 class="mt-4">Role assign</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Users</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <p>
                <a asp-action="Index" asp-controller="User" class="btn btn-success">List</a>
            </p>
        </div>
        <div class="card-body">
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="RoleAssign" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" name="UserId" value="@Model.UserId" />
                        <div class="form-group">
                            @for (int i = 0; i < Model.Roles.Count; i++)
                            {
                                <input type="hidden" asp-for="@Model.Roles[i].Id" />
                                <input type="hidden" asp-for="@Model.Roles[i].Name" />
                                <label for="@Model.Roles[i].Selected">
                                    @Model.Roles[i].Name
                                    <input type="checkbox" asp-for="@Model.Roles[i].Selected" />
                                </label>

                            }
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>





