@model HomeViewModel

@using EshopAspCore.ExtensionMethods
@using LazZiya.ExpressLocalization;

@inject ISharedCultureLocalizer _loc;
@{
    ViewData["Title"] = "Home Page";
    var culture = CultureInfo.CurrentCulture.Name;
}

@section Slider{
    <div id="carouselBlk">
        <div id="myCarousel" class="carousel slide">
            <div class="carousel-inner">
                @*<div class="item active">*@
                @for (int i = 0; i < Model.Slides.Count; i++)
                {
                    //fisrt one is item active
                    <div class="item @(i == 0 ? "active" : "") ">
                        <div class="container">
                            <a href="register.html"><img style="width:100%" src=@Model.Slides[i].Image alt="" /></a>
                            <div class="carousel-caption">
                                <h4>@Model.Slides[i].Name</h4>
                                <p>@Model.Slides[i].Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
}

<div class="well well-small">
    <h4><localize>Featured Products</localize><small class="pull-right">200+ featured products</small></h4>
    <div class="row-fluid">
        <div id="featured" class="carousel slide">
            <div class="carousel-inner">
                @{
                    var parts = Model.FeaturedProducts.ChunkBy(4);
                }
                @for (int i = 0; i < parts.Count; i++)
                {

                    <div class="item @(i==0 ? "active" : "")">
                        <ul class="thumbnails">
                            <li class="span3">
                                <div class="thumbnail">
                                    @foreach (var product in parts[i])
                                    {
                                        var url = $"/{culture}/{_loc["ProductUrl"]}/{product.Id}";

                                        <i class="tag"></i>
                                        <a href=@url><img src=@product.ThumbnailImage alt="@product.Name"></a>
                                        <div class="caption">
                                            <h5>@product.Name</h5>
                                            <h4><a class="btn" href=@url localize-content>VIEW</a> <span class="pull-right">@product.Price.ToString()</span></h4>
                                        </div>
                                    }
                                </div>
                            </li>
                        </ul>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
            <a class="right carousel-control" href="#featured" data-slide="next">›</a>
        </div>
    </div>
</div>
<h4 localize-content>Latest Products</h4>
<ul class="thumbnails">
    @foreach (var product in Model.LatestProducts)
    {
        var url = $"/{culture}/{_loc["ProductUrl"]}/{product.Id}";

        <li class="span3">
            <div class="thumbnail">
                <a href=@url><img src=@product.ThumbnailImage alt="img" /></a>
                <div class="caption">
                    <h5>@product.Name</h5>
                    <p>
                        @product.Description
                    </p>
                    <h4 style="text-align:center">
                        <a class="btn" href=@url> <i class="icon-zoom-in"></i></a>
                        <a class="btn" href="#"><localize>Add to </localize><i class="icon-shopping-cart"></i></a>
                        <a class="btn btn-primary" href="#">@product.Price.ToString()</a>
                    </h4>
                </div>
            </div>
        </li>
    }
</ul>
